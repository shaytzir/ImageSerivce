@model ImageWebApplication.Models.PhotoInfo
@{
    ViewBag.Title = "PhotoDelete";
}

<h2>Are You SURE you want to delete this photo?</h2>

<div class="circular-image">
    <img src="@Url.Content(Model.PhotoThumbRelativePath)" alt="" class="circular-image" style="width:auto; height:auto; max-width:100%; max-height:100%;">
    <div class="caption">
        <h4>@Model.PhotoName</h4>
        <p>@Model.Month/@Model.Year</p>
        <p> <a href="@Url.Action("DeletePhotoOK", "Web", new { fullThumbUrl = Model.PhotoThumbFullUrl })" id="btnDelete" class="btn btn-danger btn-xs" role="button">Delete</a>
        <a href="@Url.Action("Photos", "Web")" id="btnReturn" class="btn btn-default btn-xs" role="button">Cancel</a></p>
    </div>
</div>
