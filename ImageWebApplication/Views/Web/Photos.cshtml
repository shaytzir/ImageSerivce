
@model IEnumerable<ImageWebApplication.Models.PhotoInfo>

@{
    ViewBag.Title = "Photos";
}

<h2>Photos</h2>


@foreach (var item in Model)
{
    <div class="col-xs-18 col-sm-6 col-md-3">
        <div class="thumbnail">
            <img src="@Url.Content(item.PhotoThumbRelativePath)" alt="" class="img-circle" width="242" height="200">
            <div class="caption">
                <h4>@item.PhotoName</h4>
                <p>@item.Month/@item.Year</p>
                <p><a href="@Url.Action("PhotoView", new { photoToViewPath = item.PhotoThumbFullUrl, dir = item.OutputDir})" id="btnView" class="btn btn-info btn-xs" role="button">View</a> 
                <a href="@Url.Action("PhotoDelete", new { fullUrlThumb = item.PhotoThumbFullUrl, dir = item.OutputDir})" id="btnDelete" class="btn btn-danger btn-xs" role="button">Delete</a></p>
            </div>
        </div>
    </div>
}